source "https://rubygems.org"

# Specify the Rails version
gem "rails", "~> 7.0.0"

# Use Puma web server
gem "puma", ">= 5.0"

# Use PostgreSQL for production
group :production do
  gem "pg", "~> 1.2"
end

# Use SQLite for development and test
group :development, :test do
  gem "sqlite3", "~> 1.4"
  gem "sprockets-rails"
end

# Rack CORS for handling Cross-Origin Resource Sharing
gem "rack-cors"

# Reduce boot times through caching
gem "bootsnap", require: false

# Debugging and development tools
group :development, :test do
  gem "byebug", group: :development  # Optional debugging tool
  gem "brakeman", require: false
  gem "rubocop-rails-omakase", require: false
end

# Optionally add for production logging and asset handling
# gem "rails_12factor"  # No longer needed in Rails 7.x
