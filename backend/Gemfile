source "https://rubygems.org"
ruby "3.3.6"

# Specify the Rails version
gem "rails", "~> 7.0.8"
gem 'tzinfo-data'
# Use Puma web server
gem "puma", ">= 5.0"
gem 'mutex_m'
gem 'base64'
gem 'bigdecimal'
