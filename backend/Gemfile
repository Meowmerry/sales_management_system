source "https://rubygems.org"

# Specify the Rails version
gem "rails", "~> 7.0.0"

# Use Puma web server
gem "puma", ">= 5.0"

# Use PostgreSQL for production
group :production do
  gem "pg", "~> 1.2"
end

# Use SQLite for development and test
group :development, :test do
  gem "sqlite3", "~> 1.4"
  gem "sprockets-rails"
end

# Rack CORS for handling Cross-Origin Resource Sharing
gem "rack-cors"

# Reduce boot times through caching
gem "bootsnap", require: false

# Debugging and development tools
group :development, :test do
  gem "byebug" # Debugging tool
  gem "brakeman", require: false # Security analysis
  gem "rubocop-rails", require: false # Linting tool
end

# Comment on `rails_12factor`:
# This is no longer needed in Rails 7.x because Rails manages logging and static assets out of the box.

gem 'mutex_m'
gem 'base64'
gem 'bigdecimal'
gem 'tzinfo-data'